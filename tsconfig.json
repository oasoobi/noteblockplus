{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src",
    "outDir": "./scripts",
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
